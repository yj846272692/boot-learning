<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yj.orm.mapper.TeacherMapper">

    <resultMap id="teacherMap" type="com.yj.orm.domain.Teacher">
            <id property="teacherId" column="teacher_id"/>
            <result property="teacherName" column="teacher_name"/>
            <result property="clazzId" column="clazz_id"/>
        <association property="clazz" javaType="com.yj.orm.domain.Clazz">
            <id column="clazz_id" property="clazzId"/>
            <result column="clazz_name" property="clazzName" />
            <result column="teacher_id" property="teacherId" />
        </association>
    </resultMap>

    <select id="findOneByOne" resultMap="teacherMap">
        SELECT *
        FROM t_teacher t,
             t_clazz c
         WHERE t.teacher_id = #{teacherId}
        AND t.clazz_id = c.clazz_id
    </select>
</mapper>
